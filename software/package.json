{
  "name": "hackmycart",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "dev-server": "concurrently \"nodemon\" \"wait-on http://localhost:3000/api/ && vite\""
  },
  "nodemonConfig": {
    "watch": [
      "backend"
    ],
    "exec": "tsc && node ./build/dist/server.js",
    "ext": "ts, js, json"
  },
  "dependencies": {
    "@mdi/font": "^7.4.47",
    "axios": "^1.7.7",
    "body-parser": "^1.20.2",
    "concurrently": "^8.2.2",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "vue": "^3.4.29",
    "vuetify": "^3.7.1",
    "wait-on": "^8.0.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^22.5.2",
    "@vitejs/plugin-vue": "^5.0.5",
    "nodemon": "^3.1.4",
    "vite": "^5.3.1"
  }
}
