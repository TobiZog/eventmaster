{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": false,
    "outDir": "build/dist",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "resolveJsonModule": true
  },
  "exclude": ["node_modules", "dist"],
  "include": [
    "backend/**/*.ts",
    "backend/**/*.json"
  ]
}